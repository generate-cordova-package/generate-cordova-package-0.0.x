{
  "name": "generate-cordova-package",
  "version": "0.0.4-dev",
  "description": "programmatically generate a Cordova package from user input",
  "license": "MIT",
  "bin": {
    "generate-cordova-package": "./bin/cli.js"
  },
  "author": "Christopher J. Brody <chris.brody@gmail.com>",
